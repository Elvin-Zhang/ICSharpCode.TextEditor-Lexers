example : true :=
begin
  assertv H : true := (by trivial),
  exact H
end

example : true :=
begin
  assertv H : true := (by tactic.triv),
  exact H
end

meta example (h : tactic unit) : true :=
begin
  h, -- ERROR h should not be visible here
  trivial
end

example : false :=
begin
  assertv H : true := (by foo), -- ERROR
  exact sorry
end

constant P : Prop
example (p : P) : true :=
begin
  assertv H : P := by do { p ‚Üê tactic.get_local `p, tactic.exact p },
  trivial
end
